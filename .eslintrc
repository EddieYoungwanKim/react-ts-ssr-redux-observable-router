{
  "extends": ["eslint:recommended", "plugin:import/errors"],
  "env": {
    "browser": true,
    "commonjs": true,
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2018
  },
  "rules": {
    "no-console": "off",
    "strict": ["error", "global"],
    "curly": "warn",
    "import/no-unresolved": 2,
    "import/no-extraneous-dependencies": 2
  }
}
